<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.usuario.apiface.MainActivity"
    android:background="#eeeeee">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textId"
        android:text="ID"
        android:textColor="#ec365899"
        android:textSize="@dimen/abc_action_bar_content_inset_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textName"
        android:layout_below="@+id/textId"
        android:text="Nome"
        android:textColor="#ec365899"
        android:textSize="@dimen/abc_action_bar_content_inset_material" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imFoto"
        android:layout_below="@+id/textName"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:id="@+id/btCamera"
        android:src="@drawable/btcamera"
        android:onClick="fotografar"
        android:layout_above="@+id/imFoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPost"
        android:layout_below="@+id/imFoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#e9f2fa"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:layout_above="@+id/btPostFoto"
        android:layout_alignRight="@+id/idPostTexto"
        android:layout_alignEnd="@+id/idPostTexto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postar Foto"
        android:id="@+id/btPostFoto"
        android:onClick="postFoto"
        android:background="#ec365899"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Curtir"
        android:id="@+id/btWeb"
        android:onClick="news"
        android:background="#ec365899"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btPostFoto"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postar Texto"
        android:id="@+id/idPostTexto"
        android:onClick="postTexto"
        android:background="#ec365899"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tirar foto"
        android:id="@+id/textView2"
        android:textColor="#ec365899"
        android:layout_alignTop="@+id/imFoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mudar Cor"
        android:id="@+id/button"
        android:layout_above="@+id/textPost"
        android:layout_alignLeft="@+id/idPostTexto"
        android:layout_alignStart="@+id/idPostTexto"
        android:background="#ec365899"
        android:textColor="#fefcfc" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/faces"
        android:layout_above="@+id/imFoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
